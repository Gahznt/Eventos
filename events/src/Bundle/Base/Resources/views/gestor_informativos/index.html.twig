{# src/layouts/base.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <a class="nav-item nav-link tab-6 text-center active" id="nav-1" data-toggle="tab" href="#tab-1" role="tab">
        {{ 'GESTOR_INFO_INFORMATIVES'|trans }}
      </a>
      <a class="nav-item nav-link tab-6 text-center" id="nav-2" data-toggle="tab" href="#tab-2" role="tab">
        {{ 'GESTOR_INFO_TYPES'|trans|raw }}
      </a>
    </div>
  </nav>
  <div class="tab-content">
    <div class="tab-pane fade show active" id="tab-1" role="tabpanel">
      {% include 'gestor_informativos/tabs/informatives/index.html.twig' %}
    </div>
    <div class="tab-pane fade" id="tab-2" role="tabpanel">
      {% include 'gestor_informativos/tabs/types/index.html.twig' %}
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('gestorInformatives') }}
{% endblock %}