<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}ANPAD{% endblock %}</title>
    {% block stylesheets %}
        <link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,300italic,700' rel='stylesheet'
              type='text/css'>
        <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;900" rel="stylesheet">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>

<div class="container">
    <div class="row">
        <div class="col-md-12 ml-md-auto" style="background: white;color: black;">
            <h2>Programas Associados Efetivos</h2>

            <div class="row">
                <div class="col-6">
                    <div class="d-flex">
                        <form name="search" method="get" novalidate="novalidate" id="userFormSearch">
                            <div class="col-12 form-group">
                                <label for="search">Buscar</label>
                                <a id="userFormSearchBtn" class="inputSearchBtn"><i class="fas fa-search"></i></a>
                                <input type="text" id="search" name="search" class="filter form-control"/>
                            </div>
                            <div>
                                <button type="submit" id="search_submit" style="display:none;">
                                    Buscar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-6 pt-5">
                    <nav class="d-flex justify-content-between align-items-baseline">
                        <small class="text-muted">{{ 'Showing'|trans }} {{ programs|length }} {{ 'of'|trans }} {{ programs.getTotalItemCount }}</small>

                        {{ knp_pagination_render(programs) }}
                    </nav>
                </div>
            </div>

            {% for program in programs %}

                <div class="row mb-3">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                {{ program.name }}
                            </div>
                            <div class="collapse show" id="event-1-1">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12">
                                            {% if program.institution != null %}
                                                <p class="mb-0">{{ program.institution.name }}</p>
                                            {% endif %}
                                            {% if program.coordinator != null %}
                                                <p class="mb-0">Coordenador(a): {{ program.coordinator }}</p>
                                            {% endif %}
                                            <p class="mb-0">
                                                {% if program.street != null %}
                                                    {{ program.street }},
                                                {% endif %}
                                                {% if program.number != null %}
                                                    {{ program.number }},
                                                {% endif %}
                                                {% if program.complement != null %}
                                                    {{ program.complement }},
                                                {% endif %}
                                                {% if program.neighborhood != null %}
                                                    - {{ program.neighborhood }}
                                                {% endif %}
                                            </p>
                                            <p class="mb-0">{{ program.zipcode }}</p>
                                            <p class="mb-0">Telefone: {{ program.phone }}</p>
                                            <p class="mb-0">Celular: {{ program.cellphone }}</p>
                                            <p class="mb-0">Email: {{ program.email }}</p>
                                            <p class="mb-0">Home-Page: <a href="{{ program.website }}" target="_blank">{{ program.website }}</a></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="25">no records found</td>
                </tr>
            {% endfor %}
            <nav class="d-flex justify-content-between">
                <small class="text-muted">{{ 'Showing'|trans }} {{ programs|length }} {{ 'of'|trans }} {{ programs.getTotalItemCount }}</small>

                {{ knp_pagination_render(programs) }}
            </nav>
        </div>
    </div>
</div>
</body>
</html>
