{# src/layouts/base.html.twig #}
{% macro sortColumnHeader(cssClass, field, label) %}

    {% set direction = app.request.get('sort') == field and app.request.get('direction') == 'asc' ? 'desc' : 'asc' %}

    <th class="sort {{ app.request.get('sort') == field ? app.request.get('direction') : '' }} {{ cssClass }}">
        <a href="{{ path(app.request.get('_route'), app.request.query.all|merge({'edition': app.request.get('edition').id, 'sort': field, 'direction': direction})) }}">{{ label|trans }}</a>
    </th>

{% endmacro %}

{% import _self as sortMacro %}
{% extends 'base.html.twig' %}
{% block body %}

    <div class="schedule">
        <div class="container">
            <nav>
                <div class="nav nav-tabs" id="class-nav-tab" role="tablist">
                    <a class="nav-item nav-link tab-4" href="{{ path('ensalement_rooms_index', {edition: edition.id}) }}" role="tab">Cadastro de Salas</a>
                    <a class="nav-item nav-link tab-4" href="{{ path('ensalement_sessions_index', {edition: edition.id}) }}" role="tab">Cadastro de Sessões</a>
                    <a class="nav-item nav-link tab-4 active" id="back-route" href="{{ path('ensalement_slots_index', {edition: edition.id}) }}" role="tab">Cadastro de Slots</a>
                    {% if ensalementPriorityEnable == true %}
                        <a class="nav-item nav-link tab-4" href="{{ path('ensalement_priority_index', {edition: edition.id}) }}" role="tab">Ensalamento Prioritário</a>
                    {% endif %}

                    {% if secionsEnable == true %}
                        <a class="nav-item nav-link tab-4" href="{{ path('ensalement_sections_index', {edition: edition.id}) }}" role="tab">Listagem de Seções</a>
                    {% endif %}

                    {% if ensalementGeneralEnable == true %}
                        <a class="nav-item nav-link tab-4" href="{{ path('ensalement_general_index', {edition: edition.id}) }}" role="tab">Ensalamento Geral</a>
                    {% endif %}
                </div>
            </nav>

            <div class="tab-content">

                <!--ABA 3-->
                <div class="tab-pane fade show active" role="tabpanel">
                    <h2>Cadastro de Slots</h2>

                    <!--Parte 1 - Confirmação-->
                    <!--Anter do cadastro de slots o usuário tem que aprovar a mensagem do alert.
                        Assim que marcarem o checkbox e clicarem no botão '#btnCheck' pra confirmar, este conteúdo (#slotsAlert) é escondido e o '#slotsRegistration' passa a ser mostrado. A tela de confirmação não aparece mais para o mesmo usuário.-->

                    <div class="row d-none" id="slotsAlert">
                        <div class="col-12 col-lg-8">
                            <div class="alert alert-warning icon exclamation">
                                <h3>Antes de iniciar o cadastro de slots, confirme se:</h3>
                                <ul class="pb-1 mb-0">
                                    <li>Os coordenadores de divisão já cadastraram todas as atividades do evento.</li>
                                    <li>O responsável pelo ensalamento já cadastradou:
                                        <ul class="pt-2 mb-0">
                                            <li>Todas as Salas do Evento;</li>
                                            <li>Todas as Sessões de Trabalho do Evento;</li>
                                            <li>Todas as Sessões de Atividades do Evento.</li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="col-12 col-lg-4">
                            <h3>Confirmação</h3>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" value="">
                                    Confirmo que todas as dependências para iniciar o cadastro de slots já foram executadas.
                                </label>
                            </div>
                            <div class="row">
                                <div class="col-12 mt-4">
                                    <a class="btn btn-primary btn-lg btn-block" id="btnCheck">Iniciar Cadastro de Slots<i id="btnLoad"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!--Parte 2 - Cadastro de Slots-->

                    <h4>Selecione a data e a sala e clique em ok para ver os horários disponíveis para criar os slots.</h4>

                    <div id="slotsRegistration" class="">
                        <div class="form mb-4">

                            {% include "ensalamento_classroom_registration/tabs/slots/partials/_form.html.twig" %}
                            {{ form_start(form, {'attr': {'id':'slotsFormSessions', 'class': 'd-none', 'action':path('ensalement_slots_load_sessions', {edition: edition.id}), 'novalidate': 'novalidate', 'enctype':'multipart/form-data'}}) }}{{ form_end(form) }}

                        </div>

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message |trans }}
                            </div>
                        {% endfor %}

                        <div class="row">
                            <div class="col-12">
                                <h3>Slots Cadastradas</h3>
                            </div>
                        </div>

                        <!--TABELA-->
                        {% if results|length > 0 %}
                            <div class="tabela table-responsive">
                                <table class="table table-striped table-sm">
                                    <thead>
                                    <tr>
                                        {{ sortMacro.sortColumnHeader('', 'sess.id', 'ID') }}
                                        {{ sortMacro.sortColumnHeader('', 'sess.date', 'Data') }}
                                        {{ sortMacro.sortColumnHeader('', 'ser.name', 'Sala') }}
                                        {{ sortMacro.sortColumnHeader('', 'sess.name', 'Sessão') }}
                                        {{ sortMacro.sortColumnHeader('', 'sess.date', 'Nome do Slot') }}
                                        {{ sortMacro.sortColumnHeader('', 'sess.', 'Link') }}
                                        <th class="text-center" width="100">Ações</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for r in results %}
                                        <tr>
                                            <td>{{ r.id }}</td>
                                            <td>{{ r.systemEnsalementSessions.date|format_datetime('short', 'none') }}</td>
                                            <td>{{ r.systemEnsalementRooms.name }} | {{ r.systemEnsalementRooms.local }}</td>
                                            <td>{{ r.systemEnsalementSessions.start|format_datetime('none', 'short') }} - {{ r.systemEnsalementSessions.end|format_datetime('none', 'short') }} | {{ r.systemEnsalementSessions.name }}</td>
                                            <td class="modal-confirm-edit">{{ r.systemEnsalementSessions.date|format_datetime('short', 'none') }} | {{ r.systemEnsalementSessions.start|format_datetime('none', 'short') }} - {{ r.systemEnsalementSessions.end|format_datetime('none', 'short') }} | {{ r.systemEnsalementSessions.name }} | {{ r.systemEnsalementRooms.name }} | {{ r.systemEnsalementRooms.local }}</td>
                                            <td class="modal-link-edit">{{ r.link }}</td>
                                            <td class="text-center">
                                                <a data-path="{{ path('ensalement_slots_edit', {'id': r.id}) }}" class="edit-link hover-primary ml-2" data-toggle="modal" data-target="#modalEdit">
                                                    <i class="fas fa-link"></i>
                                                </a>

                                                <a data-toggle="tooltip" href="#excluir" class="hover-danger ml-2 tdDel" title="Apagar Slot" data-path="{{ path('ensalement_slots_remove', {'id': r.id}) }}" data-token="{{ csrf_token('delete' ~ r.id) }}" data-action="remove" data-type="{{ 'o slot'|trans }}" data-name="{{ '' }}">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <nav class="d-flex justify-content-between">
                                    <small class="text-muted">{{ 'Showing'|trans }} {{ results|length }} {{ 'of'|trans }} {{ results.getTotalItemCount }}</small>

                                    {{ knp_pagination_render(results) }}
                                </nav>
                            </div>
                        {% else %}
                            <p class="my-2">Nenhum resultado encontrado.</p>
                        {% endif %}

                    </div>
                </div><!--FIM ABA 3-->

                <!-- INÍCIO Modal para informar o link do slot -->
                <div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" data-word="{{ 'MODAL_EDIT'|trans }}">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <span class="modal-title">Edição de Link</span>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <i class="fas fa-times-circle"></i>
                                </button>
                            </div>
                            <div class="modal-body">

                                <p id="modal-msg-edit-1"></p>
                                <p id="modal-msg-edit-2"></p>

                                <div class="row form my-0">
                                    <div class="col-12 form-group">
                                        <input type="text" id="link" name="link" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <button type="button" class="btn btn-block btn-lg btn-grey-dark" data-dismiss="modal" aria-label="Close">{{ 'MODAL_CANCEL'|trans }}</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button type="button" id="editConfirm" class="btn btn-block btn-lg btn-success">
                                            {{ 'MODAL_CONFIRM'|trans }}
                                            <span class="d-none fa fa-spinner fa-spin"></span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- FIM Modal para informar o link do slot -->

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ensalement/slots') }}
{% endblock %}
