{# src/layouts/base.html.twig #}
{% macro sortColumnHeader(cssClass, field, label) %}

    {% set direction = app.request.get('sort') == field and app.request.get('direction') == 'asc' ? 'desc' : 'asc' %}

    <th class="sort {{ app.request.get('sort') == field ? app.request.get('direction') : '' }} {{ cssClass }}">
        <a href="{{ path(app.request.get('_route'), app.request.query.all|merge({'edition': app.request.get('edition').id, 'sort': field, 'direction': direction})) }}">{{ label|trans }}</a>
    </th>

{% endmacro %}

{% import _self as sortMacro %}
{% extends 'base.html.twig' %}
{% block body %}

    <div class="schedule">
        <div class="container">
            <nav>
                <div class="nav nav-tabs" id="class-nav-tab" role="tablist">
                    <a class="nav-item nav-link tab-4" href="{{ path('ensalement_rooms_index', {edition: edition.id}) }}" role="tab">Cadastro de Salas</a>
                    <a class="nav-item nav-link tab-4" href="{{ path('ensalement_sessions_index', {edition: edition.id}) }}" role="tab">Cadastro de Sessões</a>
                    <a class="nav-item nav-link tab-4" href="{{ path('ensalement_slots_index', {edition: edition.id}) }}" role="tab">Cadastro de Slots</a>
                    {% if ensalementPriorityEnable == true %}
                        <a class="nav-item nav-link tab-4" href="{{ path('ensalement_priority_index', {edition: edition.id}) }}" role="tab">Ensalamento Prioritário</a>
                    {% endif %}

                    {% if secionsEnable == true %}
                        <a class="nav-item nav-link tab-4" href="{{ path('ensalement_sections_index', {edition: edition.id}) }}" role="tab">Listagem de Seções</a>
                    {% endif %}

                    {% if ensalementGeneralEnable == true %}
                        <a class="nav-item nav-link tab-4 active" id="back-route" href="{{ path('ensalement_general_index', {edition: edition.id}) }}" role="tab">Ensalamento Geral</a>
                    {% endif %}
                </div>
            </nav>

            <div class="tab-content">

                <!--ABA 5-->
                <div class="tab-pane fade show active" id="class-tab-5" role="tabpanel">

                    <a target="_blank" href="{{ path('ensalement_generate_detailed_schedule_pdf', {'edition': app.request.get('edition').id }) }}" class="btn btn-primary float-right ml-2" data-toggle="tooltip" title="{{ 'Download de PDF'|trans }}">
                        <i class="fas fa-download"></i>
                    </a>
                    <a target="_blank" href="{{ path('ensalement_generate_coordinator_debater_excel', {'edition' : edition.id}) }}" class="btn btn-primary float-right ml-2" data-toggle="tooltip" title="{{ 'Baixar Excel'|trans }}">
                        <i class="fas fa-file-excel"></i> {{ 'Coord/Debat'|trans }}
                    </a>

                    <h2>Ensalamento Geral</h2>
                    <div class="form mb-4">
                        {% include "ensalamento_classroom_registration/tabs/general/partials/_search_form.html.twig" %}

                        {{ form_start(form, {'attr': {'id':'generalScheduleSearchFilterForm', 'class': 'row', 'action':path('ensalement_general_search_filter', {edition: edition.id}), 'method': 'GET', 'novalidate': 'novalidate'}}) }}{{ form_end(form) }}
                        {{ form_start(formSlots, {'attr': {'id':'generalScheduleEditForm', 'class': 'd-none', 'action':path('ensalement_general_edit', {id:'__id__'}), 'method': 'GET', 'novalidate': 'novalidate'}}) }}{{ form_end(formSlots) }}
                    </div>

                    <!--TABELA-->

                    {% if results|length > 0 %}

                        <div class="tabela table-responsive">
                            <table class="table table-striped table-sm">
                                <thead>

                                <tr>
                                    {{ sortMacro.sortColumnHeader('miw-90', 'd.portuguese', 'Div./Artigo') }}
                                    {{ sortMacro.sortColumnHeader('miw-60', 'utd.portugueseTitle', 'Tema') }}
                                    {{ sortMacro.sortColumnHeader('', 'sesss.title', 'Título da Seção') }}
                                    <th style="min-width: 220px;">Participantes</th>
                                    {{ sortMacro.sortColumnHeader('miw-50', 'sesss.format', 'Tipo') }}
                                    <th>Slot</th>
                                    <th>Ações</th>
                                </tr>

                                </thead>
                                <tbody>

                                {% for r in results %}
                                    <tr>
                                        <!--A cor do badge deve ser 1 para cada divisão. Qualquer cor. Não tem regra.-->
                                        <td>
                                            {% if r.articles|length > 0 %}
                                                {% for a in r.articles %}
                                                    {% if loop.index0 > 0 %}<br/>{% endif %}
                                                    <span class="badge badge-danger mb-1">{{ r.division.initials }}/{{ a.UserArticles.id }}</span>
                                                {% endfor %}
                                            {% endif %}
                                        </td>
                                        <td>{{ r.userThemes.position }} - {{ r.userThemes.details.title }}</td>
                                        <td>{{ r.title }}</td>
                                        <td>
                                            {% if r.coordinatorDebater1|length > 0 %}
                                                {{ COORDINATOR_DEBATER_TYPES[r.coordinatorDebater1Type] }}: {{ r.coordinatorDebater1.name }}
                                            {% endif %}

                                            {% if r.coordinatorDebater2|length > 0 %}
                                                {% if r.coordinatorDebater1|length > 0 %}<br/>{% endif %}
                                                {{ COORDINATOR_DEBATER_TYPES[r.coordinatorDebater2Type] }}: {{ r.coordinatorDebater2.name }}
                                            {% endif %}
                                        </td>
                                        <td><span class="badge-round {% if r.format == 1 %}badge-primary{% else %}badge-danger{% endif %}">{{ SECTION_FORMATS[r.format]|slice(0, 1)|lower }}</span></td>
                                        <td>
                                            <input name="id" type="hidden" value="{{ r.id }}"/>
                                            <select id="slot_{{ r.id }}" name="ensalement_general[systemEnsalementSlots]" class="filter select-table">
                                                {% for s in slots %}
                                                    <option value="{{ s.id }}" {% if s.id == r.systemEnsalementSlots.id %}selected{% endif %}>{{ s.systemEnsalementSessions.date|format_datetime(pattern="d/MM") }} | {{ s.systemEnsalementSessions.start|format_datetime('none', 'short') }} - {{ s.systemEnsalementSessions.end|format_datetime('none', 'short') }} | {{ s.systemEnsalementRooms.name }} | {{ s.systemEnsalementRooms.local }}</option>
                                                {% endfor %}
                                            </select>
                                            <span class="activity-indicator d-none"><i class="fa fa-spinner fa-spin"></i></span>
                                            <p class="success-indicator d-none text-success">
                                                <i class="fa fa-check"></i>
                                                <small class="errormessage-indicator"></small>
                                            </p>
                                            <p class="error-indicator d-none text-danger">
                                                <i class="fa fa-ban"></i>
                                                <small class="errormessage-indicator"></small>
                                            </p>
                                        </td>

                                        <td>
                                            <a data-toggle="tooltip" href="{{ path('ensalement_sections_edit', {'id': r.id}) }}" class="hover-success" title="Editar Seção">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>

                                            <a data-toggle="tooltip" href="#excluir" class="hover-danger ml-2 tdDel" title="Apagar Seção" data-path="{{ path('ensalement_sections_remove', {'id': r.id}) }}" data-token="{{ csrf_token('delete' ~ r.id) }}" data-action="remove" data-type="{{ 'a seção'|trans }}" data-name="{{ '&nbsp;' }}">
                                                <i class="fas fa-times"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <nav class="d-flex justify-content-between">
                                <small class="text-muted">{{ 'Showing'|trans }} {{ results|length }} {{ 'of'|trans }} {{ results.getTotalItemCount }}</small>

                                {{ knp_pagination_render(results) }}
                            </nav>
                        </div>

                    {% else %}
                        <p class="my-2">Nenhum resultado encontrado.</p>
                    {% endif %}

                    <div class="row mt-4">
                        <div class="col-12">
                            <h4>Legenda:</h4>
                            <div class="small mt-1 px-2 py-1 d-inline-block">
                                * Tipo = Formato da Seção: <span class="badge-round tra">t</span> = Tradicional &nbsp; &nbsp; &nbsp;<span class="badge-round apr">a</span> = Aprimoramento &nbsp; &nbsp; &nbsp;<span class="badge-round int">i</span> = Interativa.
                            </div>
                            <br/>
                            <div class="small mt-1 px-2 py-1 d-inline-block">
                                Seção tipo <span class="badge-round apr">a</span> ou <span class="badge-round int">i</span> devem ser alocadas em slots com final "circ".
                                Seção tipo <span class="badge-round tra">t</span> devem ser alocadas em slots com final "trad".
                            </div>
                        </div>
                    </div>
                </div><!--FIM ABA 5-->

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ensalement/general') }}
{% endblock %}
