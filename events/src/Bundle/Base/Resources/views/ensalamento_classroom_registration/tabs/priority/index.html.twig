{# src/layouts/base.html.twig #}
{% macro sortColumnHeader(cssClass, field, label) %}

    {% set direction = app.request.get('sort') == field and app.request.get('direction') == 'asc' ? 'desc' : 'asc' %}

    <th class="sort {{ app.request.get('sort') == field ? app.request.get('direction') : '' }} {{ cssClass }}">
        <a href="{{ path(app.request.get('_route'), app.request.query.all|merge({'edition': app.request.get('edition').id, 'sort': field, 'direction': direction})) }}">{{ label|trans }}</a>
    </th>

{% endmacro %}

{% import _self as sortMacro %}
{% extends 'base.html.twig' %}
{% block body %}

    <div class="schedule">
        <div class="container">
            <nav>
                <div class="nav nav-tabs" id="class-nav-tab" role="tablist">
                    <a class="nav-item nav-link tab-4" href="{{ path('ensalement_rooms_index', {edition: edition.id}) }}" role="tab">Cadastro de Salas</a>
                    <a class="nav-item nav-link tab-4" href="{{ path('ensalement_sessions_index', {edition: edition.id}) }}" role="tab">Cadastro de Sessões</a>
                    <a class="nav-item nav-link tab-4" href="{{ path('ensalement_slots_index', {edition: edition.id}) }}" role="tab">Cadastro de Slots</a>
                    {% if ensalementPriorityEnable == true %}
                        <a class="nav-item nav-link tab-4 active" id="back-route" href="{{ path('ensalement_priority_index', {edition: edition.id}) }}" role="tab">Ensalamento Prioritário</a>
                    {% endif %}

                    {% if secionsEnable == true %}
                        <a class="nav-item nav-link tab-4" href="{{ path('ensalement_sections_index', {edition: edition.id}) }}" role="tab">Listagem de Seções</a>
                    {% endif %}

                    {% if ensalementGeneralEnable == true %}
                        <a class="nav-item nav-link tab-4" href="{{ path('ensalement_general_index', {edition: edition.id}) }}" role="tab">Ensalamento Geral</a>
                    {% endif %}
                </div>
            </nav>

            <div class="tab-content">

                <!--ABA 4-->
                <div class="tab-pane fade show active" role="tabpanel">
                    <h2>Ensalamento Prioritário de Atividades e Paineis</h2>

                    <!--Primeira Etapa-->
                    <h3>Primeira Etapa - Seleção</h3>
                    <h4>Selecione a atividade que deseja agendar, escolhendo a divisão, tipo de atividade e nome. Caso no cadastro tenha sido solicitado alguma restrição de horário, ela será mostrada abaixo. Clique no botão selecionar e passe para segunda etapa.</h4>

                    <div class="form mb-4">

                        {% include "ensalamento_classroom_registration/tabs/priority/partials/_form.html.twig" %}
                        {{ form_start(form, {'attr': {'id':'priorityScheduleFilterForm', 'class': 'd-none', 'action':path('ensalement_priority_filter', {edition: edition.id}), 'novalidate': 'novalidate'}}) }}{{ form_end(form) }}

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message |trans }}
                            </div>
                        {% endfor %}

                        <!--Terceira Etapa-->
                        <div class="row">
                            <div class="col-12 col-md-12 mt-4">
                                <h3>Etapa Final - Conferência</h3>
                                <p>Os cadastros efetuados acima irão atualizar aqui conforme forem sendo salvos.</p>
                            </div>
                        </div>

                    </div>

                    <!--TABELA-->
                    {% if results|length > 0 %}
                        <div class="tabela table-responsive">
                            <table class="table table-striped table-sm">

                                <!--Mostra os itens agendados com o nome do slot e todas as atividades e paineis que ainda não foram agendados.-->
                                <thead>
                                <tr>
                                    {{ sortMacro.sortColumnHeader('', 'a.activityType', 'Tipo de Atividade') }}
                                    {{ sortMacro.sortColumnHeader('', 'd.portuguese', 'Divisão') }}
                                    {{ sortMacro.sortColumnHeader('', 'a.titlePortuguese', 'Título') }}
                                    <th>Participantes</th>
                                    {{ sortMacro.sortColumnHeader('', 'sess.date', 'Data') }}
                                    {{ sortMacro.sortColumnHeader('', 'sess.start', 'Slot agendado') }}
                                    <th class="text-center">Ações</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for r in results %}
                                    <tr>
                                        <td>{{ r.contentType == 2 ? 'Painel' : ACTIVITY_TYPES[r.activity.activityType] }}</td>
                                        <td>{{ r.contentType == 2 ? r.panel.divisionId.name : r.activity.division.name }}</td>
                                        <td>{{ r.contentType == 2 ? r.panel.title : r.activity.titlePortuguese }}</td>
                                        <td>
                                            {% if r.contentType == 2 %} {# Painel #}
                                                {% if r.panel.panelsPanelists|length > 0 %}
                                                    {% for panelsPanelist in r.panel.panelsPanelists %}
                                                        {% if loop.index0 > 0 %}<br/>{% endif %}
                                                        {{ panelsPanelist.panelistId.name }} - Painelista
                                                    {% endfor %}
                                                {% endif %}

                                                {% if r.panel.proponentId|length > 0 %}
                                                    {% if r.panel.panelsPanelists|length > 0 %}<br/>{% endif %}
                                                    {{ r.panel.proponentId.name }} - Proponente
                                                {% endif %}
                                            {% else %} {# Atividade #}
                                                {% if r.activity.panelists|length > 0 %}
                                                    {% for panelist in r.activity.panelists %}
                                                        {% if loop.index0 > 0 %}<br/>{% endif %}
                                                        {{ panelist.panelist.name }} - Painelista
                                                    {% endfor %}
                                                {% endif %}

                                                {% if r.activity.guests|length > 0 %}
                                                    {% for guest in r.activity.guests %}
                                                        {% if loop.index0 > 0 or r.activity.panelists|length > 0 %}<br/>{% endif %}
                                                        {% set name = guest.name %}
                                                        {% if name is empty and guest.guest is not empty %}
                                                            {% set name = guest.guest.name %}
                                                        {% endif %}
                                                        {{ name }} - Convidado
                                                    {% endfor %}
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                        <td>{{ r.systemEnsalementSlots.systemEnsalementSessions.date|format_datetime('short', 'none') }}</td>
                                        <td>{{ r.systemEnsalementSlots.systemEnsalementSessions.start|format_datetime('none', 'short') }} - {{ r.systemEnsalementSlots.systemEnsalementSessions.end|format_datetime('none', 'short') }} | {{ SESSION_TYPES[r.systemEnsalementSlots.systemEnsalementSessions.type] }} | {{ r.systemEnsalementSlots.systemEnsalementRooms.name }} | {{ r.systemEnsalementSlots.systemEnsalementRooms.local }}</td>

                                        <td class="text-center">
                                            <a data-toggle="tooltip" href="#excluir" class="hover-danger ml-2 tdDel" title="Apagar Slot" data-path="{{ path('ensalement_priority_remove', {'id': r.id}) }}" data-token="{{ csrf_token('delete' ~ r.id) }}" data-action="remove" data-type="{{ 'o registro'|trans }}" data-name="{{ '' }}">
                                                <i class="fas fa-times"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <nav class="d-flex justify-content-between">
                                <small class="text-muted">{{ 'Showing'|trans }} {{ results|length }} {{ 'of'|trans }} {{ results.getTotalItemCount }}</small>

                                {{ knp_pagination_render(results) }}
                            </nav>
                        </div>
                    {% else %}
                        <p class="my-2">Nenhum resultado encontrado.</p>
                    {% endif %}

                </div><!--FIM ABA 4-->

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ensalement/priority') }}
{% endblock %}
