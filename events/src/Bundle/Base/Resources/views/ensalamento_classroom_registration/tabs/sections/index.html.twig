{# src/layouts/base.html.twig #}
{% macro sortColumnHeader(cssClass, field, label) %}

    {% set direction = app.request.get('sort') == field and app.request.get('direction') == 'asc' ? 'desc' : 'asc' %}

    <th class="sort {{ app.request.get('sort') == field ? app.request.get('direction') : '' }} {{ cssClass }}">
        <a href="{{ path(app.request.get('_route'), app.request.query.all|merge({'edition': app.request.get('edition').id, 'sort': field, 'direction': direction})) }}">{{ label|trans }}</a>
    </th>

{% endmacro %}

{% import _self as sortMacro %}
{% extends 'base.html.twig' %}
{% block body %}

    <div class="schedule">
        <div class="container">
            <nav>
                <div class="nav nav-tabs" id="class-nav-tab" role="tablist">
                    <a class="nav-item nav-link tab-4" href="{{ path('ensalement_rooms_index', {edition: edition.id}) }}" role="tab">Cadastro de Salas</a>
                    <a class="nav-item nav-link tab-4" href="{{ path('ensalement_sessions_index', {edition: edition.id}) }}" role="tab">Cadastro de Sessões</a>
                    <a class="nav-item nav-link tab-4" href="{{ path('ensalement_slots_index', {edition: edition.id}) }}" role="tab">Cadastro de Slots</a>
                    {% if ensalementPriorityEnable == true %}
                        <a class="nav-item nav-link tab-4" href="{{ path('ensalement_priority_index', {edition: edition.id}) }}" role="tab">Ensalamento Prioritário</a>
                    {% endif %}

                    {% if secionsEnable == true %}
                        <a class="nav-item nav-link tab-4 active" id="back-route" href="{{ path('ensalement_sections_index', {edition: edition.id}) }}" role="tab">Listagem de Seções</a>
                    {% endif %}

                    {% if ensalementGeneralEnable == true %}
                        <a class="nav-item nav-link tab-4" href="{{ path('ensalement_general_index', {edition: edition.id}) }}" role="tab">Ensalamento Geral</a>
                    {% endif %}
                </div>
            </nav>

            <div class="tab-content">

                <!--ABA 1-->
                <div class="tab-pane fade show active" role="tabpanel">
                    <div class="sections">
                        <div class="row">
                            <div class="col-12">
                                <h2 class="float-left">Listagem de Seções</h2>
                                <div class="float-right ">

                                    <a href="{{ path('ensalement_sections_new', {edition: edition.id}) }}" data-toggle="tooltip" class="btn btn-sm btn-success hover-danger setClipboard" title="Adicionar Seção">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message |trans }}
                            </div>
                        {% endfor %}

                        {% if results|length > 0 or app.request.get('search')|length > 0 %}

                            <div class="form">
                                {% include "ensalamento_classroom_registration/tabs/sections/partials/_search_form.html.twig" %}
                                {{ form_start(form, {'attr': {'id':'sectionScheduleSearchFilterForm', 'class': 'row', 'action':path('ensalement_sections_search_filter', {edition: edition.id}), 'method': 'GET', 'novalidate': 'novalidate'}}) }}{{ form_end(form) }}
                            </div>

                        {% endif %}

                        {% if results|length > 0 %}

                            <div class="tabela table-responsive">
                                <table class="table table-striped table-sm">
                                    <thead>
                                    <tr>
                                        {{ sortMacro.sortColumnHeader('miw-90', 'd.portuguese', 'Divisão') }}
                                        {{ sortMacro.sortColumnHeader('miw-60', 'utd.portugueseTitle', 'Tema') }}
                                        {{ sortMacro.sortColumnHeader('', 'sesss.title', 'Título da Seção') }}
                                        <th class="miw-80">Artigos</th>
                                        <th style="min-width: 220px;">Participantes</th>
                                        {{ sortMacro.sortColumnHeader('', 'sesss.format', 'Formato da Sessão') }}
                                        <th>Ações</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {% for r in results %}
                                        <tr>
                                            <td>
                                                <span class="badge badge-info">{{ r.division.initials }}</span>
                                            </td>
                                            <td>{{ r.userThemes.position }} - {{ r.userThemes.details.title }}</td>
                                            <td>{{ r.title }}</td>
                                            <td>
                                                {% if r.articles|length > 0 %}
                                                    {% for a in r.articles %}
                                                        {% if loop.index0 > 0 %}<br/>{% endif %}
                                                        {{ a.UserArticles.id }}-{{ a.UserArticles.title }}
                                                    {% endfor %}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if r.coordinatorDebater1|length > 0 %}
                                                    {{ COORDINATOR_DEBATER_TYPES[r.coordinatorDebater1Type] }}: {{ r.coordinatorDebater1.name }}
                                                {% endif %}

                                                {% if r.coordinatorDebater2|length > 0 %}
                                                    {% if r.coordinatorDebater1|length > 0 %}<br/>{% endif %}
                                                    {{ COORDINATOR_DEBATER_TYPES[r.coordinatorDebater2Type] }}: {{ r.coordinatorDebater2.name }}
                                                {% endif %}
                                            </td>
                                            <td><span class="badge {% if r.format == 1 %}badge-primary{% else %}badge-danger{% endif %}">{{ SECTION_FORMATS[r.format] }}</span></td>

                                            <td class="text-center">
                                                <a data-toggle="tooltip" href="{{ path('ensalement_sections_edit', {'id': r.id}) }}" class="hover-success" title="Editar Seção">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>

                                                <a data-toggle="tooltip" href="#excluir" class="hover-danger ml-2 tdDel" title="Apagar Seção" data-path="{{ path('ensalement_sections_remove', {'id': r.id}) }}" data-token="{{ csrf_token('delete' ~ r.id) }}" data-action="remove" data-type="{{ 'a seção'|trans }}" data-name="{{ '&nbsp;' }}">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <nav class="d-flex justify-content-between">
                                    <small class="text-muted">{{ 'Showing'|trans }} {{ results|length }} {{ 'of'|trans }} {{ results.getTotalItemCount }}</small>

                                    {{ knp_pagination_render(results) }}
                                </nav>
                            </div>

                        {% else %}
                            <p class="my-2">Nenhum resultado encontrado.</p>
                        {% endif %}
                    </div>

                </div><!--FIM ABA 1-->

            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ensalement/sections_search') }}
{% endblock %}
