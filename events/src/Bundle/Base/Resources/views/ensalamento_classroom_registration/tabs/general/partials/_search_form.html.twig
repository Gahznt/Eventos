        <div class="form-error invalid-feedback">
            {{ form.time.vars['errors'][0].message }}
        </div>
    {% endif %}
</div>

<!--Mostra a identificação da seção-->
<div class="col-12 col-md-4 form-group">
    {{ form_label(form.article, 'Artigo') }}
    {{ form_widget(form.article, {'attr': {'class': 'filter form-control'}}) }}
    {% if form.article.vars['errors']|length > 0 %}
        <div class="form-error invalid-feedback">
            {{ form.article.vars['errors'][0].message }}
        </div>
    {% endif %}
</div>

<div class="col-md-3 mt-4">
    <button type="submit" class="btn btn-primary btn-lg btn-block">Filtrar<i id="btnFilterSchedule"></i></button>
</div>

<div class="col-12">
    <p class="activity-indicator d-none"><i class="fa fa-spinner fa-spin"></i> {{ 'Carregando...'|trans }}</p>
</div>
{{ form_end(form) }}
