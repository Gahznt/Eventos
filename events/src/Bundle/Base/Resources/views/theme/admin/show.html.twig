    {# src/layouts/base.html.twig #}
    {% extends 'base.html.twig' %}
    {% block body %}
    <div class="container">
        <div class="row">

            <a class="btn btn-primary" href="{{ path('theme_new') }}">Create new</a>
        </div>
        <div class="row">
        <h1>Themes</h1>

        <table class="table">
            <tbody>
            {% for theme in themes %}
                <tr>
                    <th>Id</th>
                    <td>{{ theme.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ theme.english }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ theme.descriptionEnglish}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        </div>
    </div>
    {% endblock %}
