{% if userTheme.logs|length > 0 %}
    <div class="tabela table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th class="text-center" style="width: 160px">Data</th>
                <th>Usuário</th>
                <th>Ação</th>
                <th>Detalhes</th>
            </tr>
            </thead>
            <tbody>
            {% for log in userTheme.logs %}
                {% if log.visibleAuthor or (isAdmin or isAdminOperational or isDivisionCoordinator or isDivisionCommittee) %}
                    <tr>
                        <td class="text-center">{{ log.createdAt|format_datetime('short', 'medium') }}</td>
                        <td style="min-width: 150px; max-width: 250px">{{ log.user.id }} - {{ log.user.name }}</td>
                        <td>{{ log.action|trans }}</td>
                        <td>{{ log.reason|raw }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <p class="my-2">Nenhum resultado encontrado.</p>
{% endif %}
