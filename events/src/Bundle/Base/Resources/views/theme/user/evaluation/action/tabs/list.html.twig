{{ form_start(formList, {'method':'GET', 'attr': {'id':'themeListForm','action':path('theme_evaluation_action'), 'novalidate':'novalidate' }}) }}
<div class="stepsTab" data-step="1">

  <div class="row">
    <div class="col-md-12">
      <h1>{{ 'TEVAL_STEP2_HEAD'|trans }}</h1>
    </div>
  </div>
  <div class="row">

    <div class="col-lg-3 col-md-6 form-group">
      <label for="theme-list-division">{{ 'ACADEMIC_DIVISION'|trans }}</label>
      {{ form_widget(formList.divisionId, {'attr': {'id':'divisionId', 'class': 'form-control'}}) }}
      {% if formList.divisionId.vars['errors']|length > 0 %}
          <div class="invalid-feedback">
              {% for error in formList.divisionId.vars['errors'] %}
                  {{ error.message }}
              {% endfor %}
          </div>
      {% endif %}
      <div class="form-error invalid-feedback"></div>
    </div>

    <div class="col-lg-3 col-md-6 form-group">
      <label for="theme-list-id">{{ 'THEME_LIST_NAME'|trans }}</label>
      {{ form_widget(formList.id, {'attr': {'id':'id', 'class': 'form-control'}}) }}
      {% if formList.id.vars['errors']|length > 0 %}
          <div class="invalid-feedback">
              {% for error in formList.id.vars['errors'] %}
                  {{ error.message }}
              {% endfor %}
          </div>
      {% endif %}
      <div class="form-error invalid-feedback"></div>
    </div>

    <div class="col-lg-3 col-md-6 form-group">
      <label for="theme-list-status">{{ 'Status'|trans }}</label>
      {{ form_widget(formList.status, {'disabled': true, 'attr': {'id':'status', 'class': 'form-control'}}) }}
      {% if formList.status.vars['errors']|length > 0 %}
          <div class="invalid-feedback">
              {% for error in formList.status.vars['errors'] %}
                  {{ error.message }}
              {% endfor %}
          </div>
      {% endif %}
      <div class="form-error invalid-feedback"></div>
    </div>

    <div class="col-lg-3 col-md-6 form-group">
        <label for="theme-list-search">{{ 'Search'|trans }}</label>
        <a id="themeEvalSearchBtn" class="inputSearchBtn"><i class="fas fa-search"></i></a>
        {{ form_widget(formList.search, {'attr': {'id':'search', 'class': 'filter form-control', 'style': 'height:calc(1.5em + 0.75rem + 12px);'}}) }}
    </div>

  </div>

  <div class="tabela my-2">
    <table class="table table-sm table-striped table-responsive-md w-100" id="themesTable">
      <thead>
        <tr>
          <th data-data="cod" data-title="{{ 'THEME_LIST_ID'|trans }}" width="40">{{ 'THEME_LIST_ID'|trans }}</th>
          <th data-data="title" data-title="{{ 'TÃ­tulo'|trans }}">{{ 'THEME_TITLE_FORM'|trans }}</th>
          <th data-title="{{ 'Status'|trans }}" width="100">{{ 'Status'|trans }}</th>
          <th data-title="{{ 'Actions'|trans }}" width="40" toggle="tooltip" data-edit="{{ 'Editar tema'|trans }}" data-modal-title="{{ 'Excluir Proposta de Tema'|trans }}" data-path="/delete_success" data-token="{{ csrf_token('delete') }}" data-type="{{ 'o tema'|trans }}">
          {{ 'Action'|trans }}</th>
        </tr>
      </thead>

      <tbody>
      {% for theme in themes %}
        <tr>
            <td>{{ theme.id }}</td>
            <td>{{ theme.position }} - {{ theme.details.title }}</td>
            <td class="text-center">
              <span class="badge badge-{{ theme.status|tema_avaliacao_status('color') }}">
                {{ theme.status|tema_avaliacao_status('label')|trans|upper }}
              </span>
            </td>
            <td>
                <a href="{{ path('theme_evaluation_action' , {id: theme.id, step: 2}) }}" data-toggle="tooltip"
                    class="hover-success" title="{{ 'TOOLTIP_USER_EVALUATE'|trans }}">
                    <i class="fas fa-gavel"></i>
                </a>
            </td>
        </tr>
      {% endfor %}
      </tbody>

    </table>
  </div>

</div>

<input type="hidden" id="step" name="step" value="1">
{{ form_end(formList) }}
