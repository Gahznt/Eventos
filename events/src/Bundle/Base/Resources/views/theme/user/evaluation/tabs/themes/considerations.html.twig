{# src/layouts/base.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                {% if isAdmin or isAdminOperational %}
                    <a class="nav-item nav-link text-center tab-1" id="nav-1" href="{{ path('theme_evaluation_index') }}" role="tab">
                        {{ 'TEVAL_STEP1'|trans|raw }}
                    </a>
                {% endif %}
                <a class="nav-item nav-link text-center tab-2" id="nav-2" href="{{ path('theme_evaluation_list') }}" role="tab">
                    {{ 'TEVAL_STEP2'|trans|raw }}
                </a>
                <a class="nav-item nav-link text-center tab-3 active" id="nav-3" href="{{ path('theme_evaluation_evaluation', {'id': userThemes.id}) }}" role="tab">
                    {{ 'Avaliação<br/> do Tema'|trans|raw }}
                </a>
            </div>
        </nav>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="tab-3" role="tabpanel">
                <div class="row">
                    <div class="col">
                        <h1>{{ 'Avaliação do Tema'|trans }}</h1>
                    </div>
                    <div class="col-auto">
                        <a href="#" data-route="{{ path('theme_evaluation_evaluation_cancellation', {'id': userThemes.id}) }}" id="btn-cancel-submission" class="btn btn-danger">
                            <i class="fas fa-times mr-2"></i> Cancelar Tema
                        </a>
                    </div>
                </div>

                {% for message in app.flashes('error') %}
                    <br>
                    <div class="alert alert-danger">
                        {{ message |trans }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('success') %}
                    <br>
                    <div class="alert alert-success">
                        {{ message |trans }}
                    </div>
                {% endfor %}

                <nav>
                    <div class="nav nav-tabs" id="nav-tab2" role="tablist">
                        <a class="nav-item nav-link text-center tab2-1" id="nav2-1" href="{{ path('theme_evaluation_evaluation', {'id': userThemes.id}) }}" role="tab">
                            {{ 'Dados do Tema'|trans|raw }}
                        </a>
                        <a class="nav-item nav-link text-center tab2-2" id="nav2-2" href="{{ path('theme_evaluation_evaluation_proponents', {'id': userThemes.id}) }}" role="tab">
                            {{ 'Dados dos Proponentes'|trans|raw }}
                        </a>
                        <a class="nav-item nav-link text-center tab2-3 active" id="nav2-3" href="{{ path('theme_evaluation_evaluation_considerations', {'id': userThemes.id}) }}" role="tab">
                            {{ 'Considerações'|trans|raw }}
                        </a>
                        <a class="nav-item nav-link text-center tab2-4" id="nav2-4" href="{{ path('theme_evaluation_evaluation_logs', {'id': userThemes.id}) }}" role="tab">
                            {{ 'Logs'|trans|raw }}
                        </a>
                    </div>
                </nav>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab2-3" role="tabpanel">
                        {{ form_start(form, {'attr': {'action': path('theme_evaluation_evaluation_considerations', {'id': userThemes.id}), 'novalidate':'novalidate'}}) }}
                        <div class="form mt-0">

                            <h2 class="mt-0">{{ 'Considerações' }}</h2>

                            <div class="row">
                                <div class="col-md-8 form-group">
                                    <label class="form-check-label" for="{{ form.status.vars['id'] }}">{{ 'Alteração de Status'|trans }}</label>
                                    <div class="radiocheck center">
                                        <div class="form-check form-check-inline">
                                            {{ form_widget(form.status, {'attr': {'class': 'form-check-input'}}) }}
                                        </div>
                                    </div>
                                    {% if form.status.vars['errors']|length > 0 %}
                                        <div class="form-error invalid-input">
                                            {{ form.status.vars['errors'][0].message }}
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="col-md-4 form-group">
                                    <label class="" for="{{ form.position.vars['id'] }}">{{ 'Ordenação'|trans }}</label>
                                        {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
                                    {% if form.position.vars['errors']|length > 0 %}
                                        <div class="form-error invalid-input">
                                            {{ form.position.vars['errors'][0].message }}
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="col-12 form-group">
                                    <label class="form-check-label required" for="{{ form.reason.vars['id'] }}">{{ 'Consideração'|trans }}</label>
                                    {{ form_widget(form.reason, {'attr': {'class': 'htmleditor'}}) }}
                                    {% if form.reason.vars['errors']|length > 0 %}
                                        <div class="form-error invalid-input">
                                            {{ form.reason.vars['errors'][0].message }}
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="col-md-12 form-group">
                                    <div class="radiocheck center">
                                        <div class="form-check form-check-inline">
                                            {{ form_widget(form.visibleAuthor, {'attr': {'id': form.visibleAuthor.vars['id'], 'class': 'form-check-input'}}) }}

                                            <label class="form-check-label" for="{{ form.visibleAuthor.vars['id'] }}">{{ 'O Autor Poderá Visualizar esta Mensagem'|trans }}</label>
                                            {% if form.visibleAuthor.vars['errors']|length > 0 %}
                                                <div class="form-error invalid-feedback">
                                                    {{ form.visibleAuthor.vars['errors'][0].message }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6 mt-5">
                                </div>
                                <div class="col-lg-6 mt-5">
                                    <button type="submit" class="g-step-forward btn btn-primary btn-lg btn-block">{{ 'SALVAR CONSIDERAÇÂO'|trans }} <i class="g-step-forward-loader fas fa-spinner fa-spin" style="display: none;"></i></button>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}

                        <h2 class="mt-3">{{ 'Histórico' }}</h2>

                        {% if logs|length > 0 %}
                            <div class="tabela table-responsive">
                                <table class="table table-striped table-sm">
                                    <thead>
                                    <tr>
                                        <th class="text-center" style="width: 160px">Data</th>
                                        <th>Usuário</th>
                                        <th>Consideração</th>
                                        <th class="text-center" style="width: 85px">Visível?</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for log in logs %}
                                        <tr>
                                            <td class="text-center">{{ log.createdAt|format_datetime('short', 'medium') }}</td>
                                            <td style="min-width: 150px; max-width: 250px">{{ log.user.id }} - {{ log.user.name }}</td>
                                            <td>{{ log.reason|raw }}</td>
                                            <td class="text-center">{{ log.visibleAuthor ? 'Sim' : 'Não' }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <p class="my-2">Nenhum resultado encontrado.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include "@Base/theme/user/evaluation/tabs/themes/partials/cancellation_modal.html.twig" %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('themeEvaluation') }}
{% endblock %}
