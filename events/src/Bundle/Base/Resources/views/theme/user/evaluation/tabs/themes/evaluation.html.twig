{# src/layouts/base.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                {% if isAdmin or isAdminOperational %}
                    <a class="nav-item nav-link text-center tab-1" id="nav-1" href="{{ path('theme_evaluation_index') }}" role="tab">
                        {{ 'TEVAL_STEP1'|trans|raw }}
                    </a>
                {% endif %}
                <a class="nav-item nav-link text-center tab-2" id="nav-2" href="{{ path('theme_evaluation_list') }}" role="tab">
                    {{ 'TEVAL_STEP2'|trans|raw }}
                </a>
                <a class="nav-item nav-link text-center tab-3 active" id="nav-3" href="{{ path('theme_evaluation_evaluation', {'id': userThemes.id}) }}" role="tab">
                    {{ 'Avaliação<br/> do Tema'|trans|raw }}
                </a>
            </div>
        </nav>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="tab-3" role="tabpanel">
                <div class="row">
                    <div class="col">
                        <h1>{{ 'Avaliação do Tema'|trans }}</h1>
                    </div>
                    <div class="col-auto">
                        <a href="#" data-route="{{ path('theme_evaluation_evaluation_cancellation', {'id': userThemes.id}) }}" id="btn-cancel-submission" class="btn btn-danger">
                            <i class="fas fa-times mr-2"></i> Cancelar Tema
                        </a>
                    </div>
                </div>

                {% for message in app.flashes('error') %}
                    <br>
                    <div class="alert alert-danger">
                        {{ message |trans }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('success') %}
                    <br>
                    <div class="alert alert-success">
                        {{ message |trans }}
                    </div>
                {% endfor %}

                <nav>
                    <div class="nav nav-tabs" id="nav-tab2" role="tablist">
                        <a class="nav-item nav-link text-center tab2-1 active" id="nav2-1" href="{{ path('theme_evaluation_evaluation', {'id': userThemes.id}) }}" role="tab">
                            {{ 'Dados do Tema'|trans|raw }}
                        </a>
                        <a class="nav-item nav-link text-center tab2-2" id="nav2-2" href="{{ path('theme_evaluation_evaluation_proponents', {'id': userThemes.id}) }}" role="tab">
                            {{ 'Dados dos Proponentes'|trans|raw }}
                        </a>
                        <a class="nav-item nav-link text-center tab2-3" id="nav2-3" href="{{ path('theme_evaluation_evaluation_considerations', {'id': userThemes.id}) }}" role="tab">
                            {{ 'Considerações'|trans|raw }}
                        </a>
                        <a class="nav-item nav-link text-center tab2-4" id="nav2-4" href="{{ path('theme_evaluation_evaluation_logs', {'id': userThemes.id}) }}" role="tab">
                            {{ 'Logs'|trans|raw }}
                        </a>
                    </div>
                </nav>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab2-1" role="tabpanel">
                        {{ form_start(form, {'attr': {'id':'formThemeStep', 'action': path('theme_evaluation_evaluation', {'id': userThemes.id}), 'novalidate':'novalidate'}}) }}
                        <div id="themeForm" class="form mt-0">
                            <input type="hidden" id="step" name="step" value="{{ step }}"/>
                            {% include "@Base/theme/user/forms/stepOne.html.twig" %}
                        </div>
                        <div class="row">
                            <div class="col-lg-6 mt-5">

                            </div>
                            <div class="col-lg-6 mt-5">
                                <button type="submit" class="g-step-forward btn btn-primary btn-lg btn-block">{{ 'SALVAR ALTERAÇÕES'|trans }} <i class="g-step-forward-loader fas fa-spinner fa-spin" style="display: none;"></i></button>
                            </div>
                        </div>
                        {{ form_widget(form._token) }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include "@Base/theme/user/evaluation/tabs/themes/partials/cancellation_modal.html.twig" %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('themeEvaluation') }}
{% endblock %}
