            {% endif %}
        </div>
        <div class="col-lg-3 form-group">
            <label class="required-{{ form.state.vars.required }}" for="state">{% trans %}State{% endtrans %}</label>
            {{ form_widget(form.state, {'id': 'sign_up_step_1_state', 'attr': {'class': 'form-control','route': path('state_by_country'), 'select' : 'Select'|trans, 'autocomplete': 'new-address'}}) }}
