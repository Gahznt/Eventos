<div class="stepsTab" data-step="1">

    <div class="row">
        <div class="col-lg-6">
            <h1>{{ 'Register data'|trans }}</h1>
        </div>
        <div class="col-lg-6">
            <p class="text-danger text-right mt-0">{{ '* Campos obrigat√≥rios'|trans }}</p>
        </div>
    </div>

    <div class="row">

        <div class="col-lg-4 form-group">
            <label class="required-{{ form.recordType.vars.required }}" for="recordTypeFake">{{ 'Nationality' | trans }}</label>
            <input type="text" id="recordTypeFake" name="recordTypeFake" disabled class="form-control"/>
        </div>

        <div class="col-lg-8 form-group">
            <label class="required-{{ form.country.vars.required }}" for="city">{% trans %}Country{% endtrans %}</label>
            {{ form_widget(form.country, {'id':'sign_up_step_1_country', 'attr': {'class': 'form-control', 'autocomplete': 'new-address'}}) }}
            {% if form.country.vars['errors']|length > 0 %}
                <div class="form-error invalid-feedback">
                    {% for error in form.country.vars['errors'] %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

    </div>
    <div class="row">
        <div class="col-lg-3 form-group">
            <label class="required-{{ form.identifier.vars.required }}" for="identifierFake">{% trans %}Document{% endtrans %}</label>
            <input type="text" id="identifierFake" name="identifierFake" disabled class="form-control"/>
        </div>
        <div class="col-lg-6 form-group">
            <label class="required-{{ form.name.vars.required }}" for="name">{% trans %}Full Name{% endtrans %}</label>
            {{ form_widget(form.name, {'attr': {'id':'name', 'class': 'form-control'}}) }}
            {% if form.name.vars['errors']|length > 0 %}
                <div class="form-error invalid-feedback">
                    {% for error in form.name.vars['errors'] %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
        <div class="col-lg-3 form-group">
            <label class="required-{{ form.birthday.vars.required }}" for="birthday">{% trans %}Birthday{% endtrans %}</label>
            {{ form_widget(form.birthday, {'attr': {'id':'birthday', 'class': 'form-control date'}}) }}
            {% if form.birthday.vars['errors']|length > 0 %}
                <div class="form-error invalid-feedback">
                    {% for error in form.birthday.vars['errors'] %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
    {# campo escondido pro chrome nao autocompletar a data por causa do campo password na sequencia #}
    <input type="hidden" style="height:0px;border:none;padding:0;">
    <div class="row">
        <div class="col-lg-6 text-left">
            <div class="password-tip alert alert-warning">
                <ul>
                    <li>
                        <i class="fas fa-exclamation-triangle"></i>
                        <b>{{ 'Password setting rules' | trans }}</b>
                    </li>
                    <li>- {{ '8 characters minimum' | trans }}</li>
                    <li>- {{ 'Minimum 1 number and 1 letter' | trans }}</li>
                </ul>
            </div>
        </div>
        <div class="col-lg-3 form-group">
            {{ form_label(form.password.first, "Password") }}
            {{ form_widget(form.password.first, {'attr': {'id':'password', 'class': 'form-control', 'autocomplete': 'new-password'}}) }}
            {% if form.password.first.vars['errors']|length > 0 %}
                <div class="form-error invalid-feedback">
                    {{ form.password.first.vars['errors'][0].message }}
                </div>
            {% endif %}
        </div>
        <div class="col-lg-3 form-group">
            {{ form_label(form.password.second, "Confirm") }}
            {{ form_widget(form.password.second, {'attr': {'id':'confirm', 'class': 'form-control', 'autocomplete': 'new-password'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2 form-group">
            <label class="required-{{ form.zipcode.vars.required }}" for="zipcode">{% trans %}Zipcode{% endtrans %}</label>
