<h1>{{ 'PANEL DATA'|trans }}</h1>

<div class="fieldset">
    <div class="row" id="panel">
        <div class="col-4 col-lg-4 div-readonly">
            <div class="label">{{ 'DASHBOARD_LBL_EVENT'|trans }}</div>
            <div class="value">{{ data.editionId.event.namePortuguese }}</div>
        </div>
        <div class="col-8 col-lg-8 div-readonly">
            <div class="label">{{ 'DASHBOARD_LBL_EDITION'|trans }}</div>
            <div class="value">{{ data.editionId.namePortuguese }}</div>
        </div>
        <div class="col-7 col-lg-7 div-readonly">
            <div class="label">{{ 'ACADEMIC_DIVISION'|trans }}</div>
            <div class="value">{{ data.divisionId|trans }}</div>
        </div>
        <div class="col-5 col-lg-5 div-readonly">
            <div class="label">{{ 'PANEL_LANGUAGE'|trans }}</div>
            <div class="value">{{ constant('LANGUAGE', data)|array_flip()[data.language] }}</div>
        </div>
        <div class="col-12 col-lg-12 div-readonly">
            <div class="label">{{ 'PANEL_DATA_TITLE'|trans }}</div>
            <div class="value">{{ data.title }}</div>
        </div>
        <div class="col-6 col-lg-6 div-readonly">
            <div class="label">{{ 'PANEL_JUSTIFY'|trans }}</div>
            <div class="value">{{ data.justification }}</div>
        </div>
        <div class="col-6 col-lg-6 div-readonly">
            <div class="label">{{ 'PANEL_SUGGESTION'|trans }}</div>
            <div class="value">{{ data.suggestion }}</div>
        </div>

        <div class="col-12 mt-3">
            <a class="btn btn-outline-primary" onclick="javascript:history.go(-1)">
                <i class="far fa-arrow-alt-circle-left"></i><span>&nbsp;VOLTAR</span>
            </a>
        </div>
    </div>  <!-- ./class="row" id="panel" -->
</div>  <!-- ./class="fieldset" -->