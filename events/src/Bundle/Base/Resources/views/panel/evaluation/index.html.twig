{# src/layouts/base.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <a class="nav-item nav-link text-center tab-2 {{ step==1 ? 'active':'' }}" id="nav-1" data-toggle="tab" href="#tab-1" role="tab">
        {{ 'PEVAL_STEP1'|trans|raw }}
      </a>
      <a class="nav-item nav-link text-center tab-2 {{ step==2 ? 'active':'' }}" id="nav-2" data-toggle="tab" href="#tab-2" role="tab">
        {{ 'PEVAL_STEP2'|trans|raw }}
      </a>
      {% if step > 2 %}
        <a class="nav-item nav-link text-center tab-2 {{ step==3 ? 'active':'' }}" id="nav-3" data-toggle="tab" href="#tab-3" role="tab">
          {{ 'PEVAL_STEP3'|trans|raw }}
        </a>
      {% endif %}
    </div>
  </nav>

  <div class="tab-content">
    <div class="tab-pane fade {{ step==1 ? 'show active':'' }}" id="tab-1" role="tabpanel">
      {% include 'panel/evaluation/tabs/dashboard/dashboard.html.twig' %}
    </div>
    <div class="tab-pane fade {{ step==2 ? 'show active':'' }}" id="tab-2" role="tabpanel">
      {% include 'panel/evaluation/tabs/list/list.html.twig' %}
    </div>
    {% if step > 2 %}
      <div class="tab-pane fade {{ step==3 ? 'show active':'' }}" id="tab-3" role="tabpanel">
        {% include 'panel/evaluation/tabs/view/view.html.twig' %}
      </div>
    {% endif %}
  </div>

</div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('panelEvaluation') }}
{% endblock %}