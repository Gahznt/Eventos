<input type="hidden" name="fake[recordType]" value="{{ user.recordType }}">

{% set identifierLabel = '' %}

{% if (constant('USER_RECORD_TYPE_BRAZILIAN', user) == user.recordType) %}
    {% set identifierLabel = 'CPF' %}
{% else %}
    {% if (constant('USER_FOREIGN_USE_CPF_YES', user) == user.isForeignUseCpf) %}
        {% set identifierLabel = 'CPF' %}
    {% else %}
        {% if (constant('USER_FOREIGN_USE_PASSPORT_YES', user) == user.isForeignUsePassport) %}
            {% set identifierLabel = 'Passport' %}
        {% else %}
            {% set identifierLabel = 'Identifier' %}
        {% endif %}
    {% endif %}
{% endif %}

<div class="row">
    <div class="col-lg-4 form-group div-readonly">
        <label class="required-1" for="recordType">{{ 'Nationality' | trans }}</label>
        <input type="text" id="recordType" name="recordType" disabled class="form-control" value="{{ constant('USER_RECORD_TYPE', user)|array_flip()[user.recordType]|trans }}"/>
    </div>
    <div class="col-lg-8 form-group">
        <label class="required-{{ form.country.vars.required }}" for="city">{% trans %}Country{% endtrans %}</label>
        {{ form_widget(form.country, {'id':'sign_up_step_1_country', 'attr': {'class': 'form-control', 'autocomplete': 'new-address'}}) }}
        {% if form.country.vars['errors']|length > 0 %}
            <div class="form-error invalid-input">
                {% for error in form.country.vars['errors'] %}
                    {{ error.message }}
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>
<div class="row">
    <div class="col-lg-3 form-group">
        <label class="required-1" for="identifier">{{ identifierLabel|trans }}</label>
        <input type="text" id="identifier" name="identifier" disabled class="form-control" value="{{ user.identifier }}"/>
    </div>
    <div class="col-lg-6 form-group">
        <label class="required-{{ form.name.vars.required }}" for="name">{% trans %}Full Name{% endtrans %}</label>
        {{ form_widget(form.name, {'attr': {'id':'name', 'class': 'form-control'}}) }}
        {% if form.name.vars['errors']|length > 0 %}
            <div class="form-error invalid-input">
