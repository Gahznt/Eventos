{# src/layouts/base.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
  <div class="fieldset">
    <div class="row">
      <div class="col-md-10">
        <h1>{{ 'SYS_EV_REPORT_TITLE'|trans }}: {{ 'SYS_EV_REPORT_SYS_STATISTICS'|trans }}</h1>
      </div>
      <div class="col-md-2">
        <!--a class="btn btn-primary btn-sm float-right mr-1" data-toggle="tooltip" title="{{ 'SYS_EV_REPORT_EXCEL'|trans }}"><i class="fas fa-file-excel"></i></a-->
      </div>
    </div>
    <div class="tabela my-2">
      <table class="table table-sm table-striped table-responsive-md">
        <thead>
          <tr class="fw-normal nlh">
            <th class="">{{ 'SYS_EV_REPORT_TH_DIVISION'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_THEMES'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_THEME_ORIG'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_THEME_FINAL'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_AVAILABLE_EV'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_RP'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_EVALUATORS'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_EV_BY'|trans|replace({'#': 1}) }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_EV_BY'|trans|replace({'#': 2}) }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_EV_BY'|trans|replace({'#': 3}) }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_DISCREP'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_INVITED'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_SELECTED'|trans }}</th>
          </tr>
        </thead>
        <tbody>
          {% for item in tableData %}
          <tr>
            <td>{{ item.division }}</td>
            <td>{{ item.themes|join(', ') }}</td>
            <td>{{ item.submitted_orig }}</td>
            <td>{{ item.submitted_final }}</td>
            <td>{{ item.available }}</td>
            <td>{{ item.rp }}</td>
            <td>{{ item.evaluators }}</td>
            <td>{{ item.evaluator_by1 }}</td>
            <td>{{ item.evaluator_by2 }}</td>
            <td>{{ item.evaluator_by3 }}</td>
            <td>{{ item.discrepancies }}</td>
            <td>{{ item.invited }}</td>
            <td>{{ item.selected }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
