    <div class="tabela my-2">
      <table class="table table-sm table-striped table-responsive-md">
        <thead>
          <tr class="fw-normal">
            <th class="">{{ 'SYS_EV_REPORT_TH_EVALUATOR'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_EMAIL'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_THEMES'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_DESIGNATED'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_EVALUATED'|trans }}</th>
            <th class="">{{ 'SYS_EV_REPORT_TH_STATUS'|trans }}</th>
          </tr>
        </thead>
        <tbody>
          {% for item in tableData %}
          {% set per = (item.evaluations * 100 / item.designations)|round(1, 'floor') %}
          <tr>
            <td>{{ item.name }}</td>
            <td>{{ item.email }}</td>
            <td>{{ item.themes|join(', ') }}</td>
            <td>{{ item.designations }}</td>
            <td>{{ item.evaluations }}</td>
            <td><span class="badge badge-{{ per == 0 ? 'danger' }}{{ per > 0 and per < 100 ? 'warning' }}{{ per == 100 ? 'success' }}" style="width:50px;">{{ per }}%</span></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
