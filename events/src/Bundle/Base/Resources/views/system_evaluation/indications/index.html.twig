{# src/layouts/base.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="fieldset">
            <h2>Lista para indicações</h2>
            <div class="form mb-3">
                {{ form_start(form) }}
                <div class="col-6 col-md-6 form-group">
                    <label for="themes">Temas</label>
                    {{ form_widget(form.themes, {'attr': {'id':'themes', 'class': 'filter form-control'}}) }}
                </div>

                <div class="col-6 col-md-6 form-group">
                    <label for="search">{{ 'Search'|trans }}</label>
                    <a id="indicationFormSearchBtn" class="inputSearchBtn"><i class="fas fa-search"></i></a>
                    {{ form_widget(form.search, {'attr': {'id':'search', 'class': 'filter form-control'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
            <div class="tabela table-responsive">
                {% if data is empty %}
                    <div class="alert alert-warning" role="alert">
                        Nenhum resultado encontrado.
                    </div>
                {% else %}
                    <table class="table table-striped table-sm">
                        <thead>
                        <tr>
                            <th>Artigo</th>
                            <th>Tema</th>
                            <th width="5%">{{ 'Actions'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for article in data %}
                            <tr>
                                <td>{{ article.title }}</td>
                                <td>{{ article.userThemes.position }} - {{ article.userThemes.details.title }}</td>
                                <td>
                                    <a href="{{ path('system_evaluation_set_indications', {'edition': edition.id, 'article': article.id}) }}"><i class="fas fa-arrow-right"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('systemEvaluationIndication') }}
{% endblock %}
