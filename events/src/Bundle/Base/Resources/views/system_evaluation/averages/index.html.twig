{# src/layouts/base.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="fieldset">
        <h1>{{ 'Médias'|trans }}</h1>
        <div class="form mb-3">
            {{ form_start(form) }}
            <div class="col-4 col-md-4 form-group">
                <label for="primary">Primário</label>
                {{ form_widget(form.primary, {'attr': {'id':'primary', 'class': 'filter form-control'}}) }}
                {% if form.primary.vars['errors']|length > 0 %}
                    <div class="form-error invalid-input">
                        {% for error in form.primary.vars['errors'] %}
                            {{ error.message }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="col-4 col-md-4 form-group">
                <label for="secondary">Secundário</label>
                {{ form_widget(form.secondary, {'attr': {'id':'secondary', 'class': 'filter form-control'}}) }}
                {% if form.secondary.vars['errors']|length > 0 %}
                    <div class="form-error invalid-input">
                        {% for error in form.secondary.vars['errors'] %}
                            {{ error.message }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="col-4 col-md-4 form-group">
                <label>&nbsp;</label>
                <button type="submit" class="btn btn-primary btn-lg btn-block" id="simular">SIMULAR</button>
                {{ form_widget(form.saved, {'attr': {'id':'saved', 'value': 2 }}) }}
            </div>
            {{ form_end(form) }}
        </div>
        <div class="tabela table-responsive">
            {% if score is empty and data is empty %}
                <div class="alert alert-warning" role="alert">
                    Nenhum resultado encontrado.
                </div>
            {% else %}
                <table class="table table-striped table-sm">
                    <thead>
                    <tr>
                        <th width="50%" >Artigo</th>
                        <th width="10%" >Divisão</th>
                        <th width="10%" >Tema</th>
                        <th width="10%" >Primário</th>
                        <th width="10%" >Secundário</th>
                        <th width="10%">{{ 'Status'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for key,point in score %}
                            {% set status = "-" %}
                            {% set statusClass = "normal" %}

                                {% if point['primary'] == 0 %}
                                    {% set status = "Descrepância" %}
                                {% else %}
                                    {% if primary > 0 and secondary > 0 %}
                                        {% if point['primary'] >= primary and point['secondary'] >= secondary %}
                                            {% set status = "Aprovado" %}
                                            {% set statusClass = "green" %}
                                        {% else %}
                                            {% set status = "Reprovado" %}
                                            {% set statusClass = "red" %}
                                        {% endif %}
                                    {% endif %}
                                {% endif %}

                            {% for article in data %}
                                {% if key == article.id %}
                                    <tr>
                                        <td>{{ article.title }}</td>
                                        <td>{{ article.divisionId }}</td>
                                        <td>{{ article.userThemes.position }} - {{ article.userThemes.details.title }}</td>
                                        <td>{{ point['primary'] }}</td>
                                        <td>{{ point['secondary'] }}</td>
                                        <td style="color: {{ statusClass }}">
                                            {{ status }}
                                        </td>
                                    </tr>
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                    </tbody>
                </table>
                <nav class="d-flex justify-content-between" style="float: right">
                    {{ knp_pagination_render(data) }}
                </nav>

                <small class="text-muted">{{ 'Showing'|trans }} {{ data|length }} {{ 'of' |trans }} {{ data.getTotalItemCount }}</small>
                <br /><br />
                <div class="form-group">
                    <button type="button" id="btnSalvar" {% if submited == false %} disabled {% endif %} class="btn  btn-lg btn-block btn-primary">SALVAR</button>
                </div>
            {% endif %}
        </div>

        {% for message in app.flashes('success') %}
            <br />
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <br />
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('systemEvaluationAverages') }}
{% endblock %}
