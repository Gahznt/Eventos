            <li data-target="#cTablet" data-slide-to="{{ loop.index0 }}" class="{{ loop.index0 == 0 ? 'active' : '' }}"></li>
        {% endfor %}
    </ol>
    <a class="carousel-control-prev" href="#cTablet" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#cTablet" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    <div class="carousel-inner">
        {% for row in dashboard.next|batch(2) %}
