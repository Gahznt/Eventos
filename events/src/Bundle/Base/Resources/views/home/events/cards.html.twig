{# desktop 4 cards por linha #}
<div class="d-none d-lg-block carousel slide dashboardEvents" id="cDesktop" data-ride="carousel" data-interval="5000" data-pause="hover">
    <ol class="carousel-indicators">
        {% for row in dashboard.next|batch(4) %}
            <li data-target="#cDesktop" data-slide-to="{{ loop.index0 }}" class="{{ loop.index0 == 0 ? 'active' : '' }}"></li>
        {% endfor %}
    </ol>
    <div class="carousel-inner">
        {% for row in dashboard.next|batch(4) %}
            <div class="carousel-item {{ loop.index0 == 0 ? 'active' : '' }}">
                <div class="row justify-content-center">
                    {% for edition in row %}
                        {% include 'home/events/card.html.twig' %}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{# tablet 2 cards por linha #}
<div class="d-none d-md-block d-lg-none carousel slide dashboardEvents" id="cTablet" data-ride="carousel" data-interval="5000" data-pause="hover">
