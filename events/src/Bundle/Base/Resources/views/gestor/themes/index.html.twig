{% import _self as sortMacro %}

{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link" href="{{ path('manager_theme_submission_config') }}" role="tab">
                    {{ 'Configurações de <br/>Submissão de Temas'|trans|raw }}
                </a>
                <a class="nav-item nav-link active" href="{{ path('manager_themes', {'themeSubmissionConfig': themeSubmissionConfig.id}) }}" role="tab">
                    {{ 'Temas Submetidos'|trans|raw }}
                </a>
            </div>
        </nav>

        <div class="tab-content">
            <div class="tab-pane fade show active" role="tabpanel">
                <nav>
                    <div class="nav nav-tabs" role="tablist">
                        <a class="nav-item nav-link active" href="{{ path('manager_themes', {'themeSubmissionConfig': themeSubmissionConfig.id}) }}" role="tab">
                            {{ 'Lista de Temas'|trans|raw }}
                        </a>
                    </div>
                </nav>
                <div class="tab-content">

                    <div class="tab-pane fade show active" role="tabpanel">
                        <div class="float-left">
                            <h1 class="mb-0">{{ 'Temas Submetidos'|trans|raw }}</h1>
                        </div>

                        <div class="clearfix"></div>

                        {% include "@Base/gestor/themes/partials/table.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog" id="modal-remove">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{ 'Atenção!'|trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>{{ 'Tem certeza que deseja continuar?'|trans }}</p>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-outline-success m-2 px-4" data-dismiss="modal">{{ 'NO'|trans }}</button>
                        <a href="#" type="submit" class="btn btn-danger m-2 px-5" id="remove">{{ 'YES'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('gestorThemes') }}
    {{ parent() }}
{% endblock %}
