{# src/layouts/base.html.twig #}
{% macro sortColumnHeader(cssClass, field, label) %}

    {% set direction = app.request.get('sort') == field and app.request.get('direction') == 'asc' ? 'desc' : 'asc' %}

    <th class="sort {{ app.request.get('sort') == field ? app.request.get('direction') : '' }} {{ cssClass }}">
        <a href="{{ path(app.request.get('_route'), app.request.query.all|merge({'editionId': app.request.get('editionId'), 'sort': field, 'direction': direction})) }}">{{ label|trans }}</a>
    </th>

{% endmacro %}

{% import _self as sortMacro %}

{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link" href="{{ path('manager_index') }}" role="tab">
                    {{ 'Events'|trans }}
                </a>
                <a class="nav-item nav-link" href="{{ path('manager_editions_index', {'eventId': event.id}) }}" role="tab">
                    {{ 'MANAGER_EDITIONS'|trans }}
                </a>
                <a class="nav-item nav-link active" href="{{ path('manager_subsections_index', {'editionId': edition.id}) }}" role="tab">
                    {{ 'SUBSECTION_TAB'|trans }}
                </a>
            </div>
        </nav>

        <div class="tab-content">
            <div class="tab-pane fade show active" role="tabpanel">
                <nav>
                    <div class="nav nav-tabs" role="tablist">
                        <a id="manager-back-route" class="nav-item nav-link active" href="{{ path('manager_subsections_index', {'editionId': edition.id}) }}" role="tab">
                            {{ 'SUB_LIST_TAB'|trans|raw }}
                        </a>
                    </div>
                </nav>
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel">
                        <div class="float-left">
                            <h1 class="mb-1">{{ 'SUB_LIST_HEAD'|trans }}: <span class="info subsectionEditionName"></span></h1>
                            <b class="text-dark">{{ 'SUB_LIST_MSG'|trans }}.</b>
                        </div>

                        <a id="novaSubsecao" class="btn btn-primary float-right newSubsection" href="{{ path('manager_subsections_new', {'editionId': edition.id}) }}" data-toggle="tooltip" title="{{ 'SUB_LIST_NEW'|trans }}"><i class="fas fa-plus"></i></a>

                        <div class="clearfix"></div>

                        {% if subsections|length > 0 %}
                            <div class="tabela my-2">
                                <table class="table table-sm table-striped table-responsive-md w-100" id="subsectionsTable">

                                    <thead>
                                    <tr>
                                        {{ sortMacro.sortColumnHeader('', 's.id', 'Id') }}
                                        {{ sortMacro.sortColumnHeader('', 's.namePortuguese', 'Name'|trans) }}
                                        {{ sortMacro.sortColumnHeader('', 's.frontCallPortuguese', 'SUB_HEADLINE'|trans) }}
                                        {{ sortMacro.sortColumnHeader('text-center', 's.status', 'Status'|trans) }}
                                        {{ sortMacro.sortColumnHeader('text-center', 's.isHighlight', 'Highlight'|trans) }}
                                        {{ sortMacro.sortColumnHeader('', 's.position', 'GESTOR_INFO_LABEL_ORDER') }}
                                        <th class="text-center" width="60">{{ 'Actions'|trans }}</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for s in subsections %}
                                        <tr>
                                            <td>{{ s.id }}</td>
                                            <td>{{ s.namePortuguese }}</td>
                                            <td>{{ s.frontCallPortuguese }}</td>
                                            <td class="text-center">
                                            <span class="badge badge-{{ s.status|status_evento('color') }}">
                                                {{ s.status|status_evento('label')|trans }}
                                            </span>
                                                {% if s.isHomolog %}
                                                    <span class="badge badge-warning">{{ 'GESTOR_INFO_LABEL_HOM'|trans }}</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                            <span class="badge badge-{{ s.isHighlight|status_evento('color') }}">
                                                {{ s.isHighlight|status_evento('label')|trans }}
                                            </span>
                                            </td>
                                            <td>{{ s.position }}</td>
                                            <td class="text-center">
                                                <a data-toggle="tooltip" href="{{ path('manager_subsections_edit', {'id': s.id}) }}" class="hover-success editSubsecao" title="{{ 'SUB_TOOLTIP_EDIT'|trans }}">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>
                                                <a data-toggle="tooltip" href="#excluir" class="hover-danger ml-2 tdDel" title="{{ 'SUB_TOOLTIP_DEL'|trans }}" data-path="{{ path('manager_subsections_remove', {'id': s.id}) }}" data-token="{{ csrf_token('delete' ~ s.id) }}" data-action="remove" data-type="{{ 'a subseção'|trans }}" data-name="{{ s.namePortuguese }}">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </td>

                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <nav class="d-flex justify-content-between">
                                    <small class="text-muted">{{ 'Showing'|trans }} {{ subsections|length }} {{ 'of'|trans }} {{ subsections.getTotalItemCount }}</small>

                                    {{ knp_pagination_render(subsections) }}
                                </nav>
                            </div>
                        {% else %}
                            <p class="my-2">{{ 'THEME_NOFOUND'|trans }}.</p>
                        {% endif %}
                    </div>
                    <br />
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message |trans }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('gestorSubsections') }}
    {{ parent() }}
{% endblock %}
