{# src/layouts/base.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" href="{{ path('manager_index') }}" role="tab">
                    {{ 'Events'|trans }}
                </a>
            </div>
        </nav>
        <div class="tab-content">
            <div class="tab-pane fade show active" role="tabpanel">
                <nav>
                    <div class="nav nav-tabs" role="tablist">
                        <a id="manager-back-route" class="nav-item nav-link" href="{{ path('manager_index') }}" role="tab">
                            {{ 'MANAGER_LIST_TITLE'|trans|raw }}
                        </a>
                        <a class="nav-item nav-link active" href="#dados" role="tab">
                            {{ 'MANAGER_EDIT_TITLE'|trans|raw }}
                        </a>
                    </div>
                </nav>
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel">

                        {% if event.id != '' %}
                            <h1>{{ 'MANAGER_LIST_HEAD'|trans }}: {{ event.namePortuguese }}</h1>
                        {% else %}
                            <h1>{{ 'MANAGER_NEW_HEAD'|trans }}</h1>
                        {% endif %}

                        {% include "gestor/tabs/events/partials/_form.html.twig" %}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('gestorEvents') }}
    {{ parent() }}
{% endblock %}
