{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link" href="{{ path('manager_index') }}">
                    {{ 'Events'|trans }}
                </a>
                <a class="nav-item nav-link active" href="{{ path('manager_editions_index', {'eventId': event.id}) }}" role="tab">
                    {{ 'MANAGER_EDITIONS'|trans }}
                </a>
            </div>
        </nav>

        <div class="tab-content">
            <div class="tab-pane fade show active" role="tabpanel">
                <nav>
                    <div class="nav nav-tabs" role="tablist">
                        <a id="manager-back-route" class="nav-item nav-link" href="{{ path('manager_editions_index', {'eventId': event.id}) }}" role="tab">
                            {{ 'MANAGER_EDITIONS_LIST'|trans|raw }}
                        </a>
                        <a class="nav-item nav-link active" href="#dados" role="tab">
                            {{ 'MANAGER_EDITIONS_DATA'|trans|raw }}
                        </a>
                    </div>
                </nav>
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel">

                        {% if edition.id != '' %}
                            <h1>{{ 'MANAGER_EDITIONS_DATA_HEAD'|trans}} {{ edition.namePortuguese }}</h1>
                        {% else %}
                            <h1>{{ 'MANAGER_EDITIONS_DATA_NEW'|trans }}</h1>
                        {% endif %}

                        {% include "gestor/tabs/editions/partials/_form.html.twig" %}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('gestorEditions') }}
    {{ parent() }}
{% endblock %}
