<h2>{{ 'SIGNUP_RELATE_INFO'|trans }}</h2>
<div class="fieldsetBg">
    <div class="row mb-3 jquery_institution_programs_row">
        <div class="col-lg-5 form-group">
            <label for="instituicao_primaria">{{ 'SIGNUP_PRIME_CO'|trans }}</label>
            {{ form_widget(form.institutionsPrograms.institutionFirstId, {'attr': {'class': 'form-control', 'data-route': path('program_by_institution')}}) }}
            {% if form.institutionsPrograms.institutionFirstId.vars['errors']|length > 0 %}
                <div class="form-error invalid-input">
                    {% for error in form.institutionsPrograms.institutionFirstId.vars['errors'] %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}

            <div class="clearfix mb-3"></div>

            <div class="other_institution_wrapper {{ form.institutionsPrograms.institutionFirstId.vars.value != 99999 ? 'd-none' : '' }}">
                <label for="otherInstitutionFirst">{{ 'SIGNUP_OTHER_INSTITUTION'|trans }}</label>
                {{ form_widget(form.institutionsPrograms.otherInstitutionFirst, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-5 form-group">
            <label for="programa_primaria">{{ 'SIGNUP_PROGRAM'|trans }}</label>
            {{ form_widget(form.institutionsPrograms.programFirstId, {'attr': {'class': 'form-control'}}) }}
            <p class="programs-load d-none"><i class="fa fa-spinner fa-spin"></i> {{ 'Carregando...'|trans }}</p>
            <div class="clearfix mb-3"></div>

            <div class="other_program_wrapper {{ form.institutionsPrograms.programFirstId.vars.value != 99999 ? 'd-none' : '' }}">
                <label for="otherProgramFirst">{{ 'SIGNUP_OTHER_PROGRAM'|trans }}</label>
                {{ form_widget(form.institutionsPrograms.otherProgramFirst, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-2 form-group">
            <label for="estado_primaria">{{ 'SIGNUP_STATE'|trans }}</label>
            {{ form_widget(form.institutionsPrograms.stateFirstId, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="row jquery_institution_programs_row">
        <div class="col-lg-5 form-group">
            <label for="instituicao_secundaria">{{ 'SIGNUP_SECN_CO'|trans }}</label>
            {{ form_widget(form.institutionsPrograms.institutionSecondId, {'attr': {'class': 'form-control', 'data-route': path('program_by_institution')}}) }}

            <div class="clearfix mb-3"></div>

            <div class="other_institution_wrapper {{ form.institutionsPrograms.institutionSecondId.vars.value != 99999 ? 'd-none' : '' }}">
                <label for="otherInstitutionSecond">{{ 'SIGNUP_OTHER_INSTITUTION'|trans }}</label>
                {{ form_widget(form.institutionsPrograms.otherInstitutionSecond, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-5 form-group">
            <label for="programa_secundaria">{{ 'SIGNUP_PROGRAM'|trans }}</label>
            {{ form_widget(form.institutionsPrograms.programSecondId, {'attr': {'id':'programa_secundaria','class': 'form-control'}}) }}
            <p class="programs-load d-none"><i class="fa fa-spinner fa-spin"></i> {{ 'Carregando...'|trans }}</p>
            <div class="clearfix mb-3"></div>

            <div class="other_program_wrapper {{ form.institutionsPrograms.programSecondId.vars.value != 99999 ? 'd-none' : '' }}">
                <label for="otherProgramSecond">{{ 'SIGNUP_OTHER_PROGRAM'|trans }}</label>
                {{ form_widget(form.institutionsPrograms.otherProgramSecond, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-2 form-group">
            <label for="estado_secundaria">{{ 'SIGNUP_STATE'|trans }}</label>
            {{ form_widget(form.institutionsPrograms.stateSecondId, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>
<h2 class="mt-3">{{ 'SIGNUP_AGREE_INFO'|trans }}</h2>
<div class="fieldsetBg checkGroup">
    <div class="row">
        <div class="col-lg-3">
            <div class="form-check">
                {{ form_widget(form.newsletterAssociated, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.newsletterAssociated, 'SIGNUP_AGREE_EMAIL'|trans, {'attr': {'class': 'form-check-label'}}) }}
            </div>
        </div>
        <div class="col-lg-3 offset-lg-1">
            <div class="form-check">
                {{ form_widget(form.newsletterEvents, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.newsletterEvents, 'SIGNUP_AGREE_EVENTS'|trans, {'attr': {'class': 'form-check-label'}}) }}
            </div>
        </div>
        <div class="col-lg-3 offset-lg-1">
            <div class="form-check">
                {{ form_widget(form.newsletterPartners, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.newsletterPartners, 'SIGNUP_AGREE_PARTNERS'|trans, {'attr': {'class': 'form-check-label'}}) }}
            </div>
        </div>
    </div>
</div>
