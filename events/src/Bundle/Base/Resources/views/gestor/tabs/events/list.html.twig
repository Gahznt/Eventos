{# src/layouts/base.html.twig #}
{% macro sortColumnHeader(cssClass, field, label) %}

    {% set direction = app.request.get('sort') == field and app.request.get('direction') == 'asc' ? 'desc' : 'asc' %}

    <th class="sort {{ app.request.get('sort') == field ? app.request.get('direction') : '' }} {{ cssClass }}">
        <a href="{{ path(app.request.get('_route'), app.request.query.all|merge({'sort': field, 'direction': direction})) }}">{{ label|trans }}</a>
    </th>

{% endmacro %}

{% import _self as sortMacro %}

{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" href="{{ path('manager_index') }}" role="tab">
                    {{ 'Events'|trans }}
                </a>
            </div>
        </nav>

        <div class="tab-content">
            <div class="tab-pane fade show active" role="tabpanel">
                <nav>
                    <div class="nav nav-tabs" role="tablist">
                        <a id="manager-back-route" class="nav-item nav-link active" href="{{ path('manager_index') }}" role="tab">
                            {{ 'MANAGER_LIST_TITLE'|trans|raw }}
                        </a>
                    </div>
                </nav>
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel">
                        <div class="float-left">
                            <h1 class="mb-0">{{ 'Events'|trans }}</h1>
                            <b class="text-dark">{{ 'MANAGER_LIST_MSG'|trans }}</b>
                        </div>

                        <a id="novoEvento" class="btn btn-primary float-right" href="{{ path('manager_new') }}" data-toggle="tooltip" title="{{ 'MANAGER_NEW_EVENT'|trans }}"><i class="fas fa-plus"></i></a>

                        <div class="clearfix"></div>

                        {% if events|length > 0 %}
                            <div class="tabela my-2">
                                <table class="table table-sm table-striped table-responsive-md">
                                    <thead>
                                    <tr>
                                        {{ sortMacro.sortColumnHeader('', 'e.id', 'Id') }}
                                        {{ sortMacro.sortColumnHeader('', 'e.namePortuguese', 'Name'|trans) }}
                                        {{ sortMacro.sortColumnHeader('', 'e.titlePortuguese', 'GESTOR_INFO_LABEL_TITLE'|trans) }}
                                        {{ sortMacro.sortColumnHeader('text-center', 'e.status', 'Status'|trans) }}
                                        <th class="text-center">{{ 'GESTOR_INFO_LABEL_EDIT'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for e in events %}
                                        <tr>
                                            <td>{{ e.id }}</td>
                                            <td>{{ e.namePortuguese }}</td>
                                            <td>{{ e.titlePortuguese }}</td>
                                            <td class="text-center">
                                            <span class="badge badge-{{ e.status|status_evento('color') }}">
                                                {{ e.status|status_evento('label')|trans }}
                                            </span>
                                                {% if e.isHomolog %}
                                                    <span class="badge badge-warning">{{ 'GESTOR_INFO_LABEL_HOM'|trans }}</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center" width="100">
                                                <a data-toggle="tooltip" href="{{ path('manager_edit', {'id': e.id}) }}" class="hover-success editEvento" title="{{ 'MANAGER_TOOLTIP_EDIT'|trans }}">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>
                                                <a data-toggle="tooltip" href="{{ path('manager_editions_index', {'eventId': e.id}) }}" class="hover-success ml-2" title="{{ 'MANAGER_TOOLTIP_LIST'|trans }}">
                                                    <i class="fas fa-book"></i>
                                                </a>
                                                {# data-path colocar o path para remocao ex: data-path="{{ path('user_delete', {'id': user.id}) }}" #}
                                                <a data-toggle="tooltip" href="#excluir" class="hover-danger ml-2 tdDel" title="{{ 'MANAGER_TOOLTIP_DEL'|trans }}" data-path="{{ path('manager_remove', {'id': e.id}) }}" data-token="{{ csrf_token('delete' ~ e.id) }}" data-action="remove" data-type="{{ 'o evento'|trans }}" data-name="{{ e.namePortuguese }}">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <nav class="d-flex justify-content-between">
                                    <small class="text-muted">{{ 'Showing'|trans }} {{ events|length }} {{ 'of'|trans }} {{ events.getTotalItemCount }}</small>

                                    {{ knp_pagination_render(events) }}
                                </nav>
                            </div>
                        {% else %}
                            <p class="my-2">{{ 'THEME_NOFOUND'|trans }}.</p>
                        {% endif %}
                    </div>
                    <br />
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message |trans }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('gestorEvents') }}
    {{ parent() }}
{% endblock %}
