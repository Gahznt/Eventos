{# src/layouts/base.html.twig #}
{% macro sortColumnHeader(cssClass, field, label) %}

    {% set direction = app.request.get('sort') == field and app.request.get('direction') == 'asc' ? 'desc' : 'asc' %}

    <th class="sort {{ app.request.get('sort') == field ? app.request.get('direction') : '' }} {{ cssClass }}">
        <a href="{{ path(app.request.get('_route'), app.request.query.all|merge({'sort': field, 'direction': direction})) }}">{{ label|trans }}</a>
    </th>

{% endmacro %}

{% import _self as sortMacro %}

{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link active" href="{{ path('manager_payment_user_associations_index') }}" role="tab">
                    {{ 'Associação de Pagamentos de Usuário'|trans }}
                </a>
            </div>
        </nav>

        <div class="tab-content">
            <div class="tab-pane fade show active" role="tabpanel">
                <nav>
                    <div class="nav nav-tabs" role="tablist">
                        <a id="manager-back-route" class="nav-item nav-link active" href="{{ path('manager_payment_user_associations_index') }}"
                           role="tab">
                            {{ 'Lista de Associação de<br>Pagamento de Usuário'|trans|raw }}
                        </a>
                    </div>
                </nav>
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel">
                        <div class="float-left">
                            <h1 class="mb-0">{{ 'Associação de Pagamento de Usuários'|trans }}</h1>
                            <b class="text-dark">{{ 'Selecione a associação de pagamento de usuário para ver os detalhes, ou crie um novo.'|trans }}</b>
                        </div>

                        <a id="newPaymentUserAssociation" class="btn btn-primary float-right" href="{{ path('manager_payment_user_associations_new') }}"
                           data-toggle="tooltip" title="{{ 'Nova associação de pagamento de usuário'|trans }}"><i
                                    class="fas fa-upload"></i></a>

                        <div class="clearfix"></div>

                        {% if paymentUserAssociations|length > 0 %}
                            <div class="tabela my-2">
                                <table class="table table-sm table-striped table-responsive-md">
                                    <thead>
                                    <tr>
                                        {{ sortMacro.sortColumnHeader('', 'paymentUserAssociation.id', 'Id') }}
                                        {{ sortMacro.sortColumnHeader('', 'paymentUserAssociation.user.name', 'User'|trans) }}
                                        {{ sortMacro.sortColumnHeader('', 'paymentUserAssociation.filename', 'Name'|trans) }}
                                        {{ sortMacro.sortColumnHeader('', 'paymentUserAssociation.quantity', 'Quantity'|trans) }}
                                        {{ sortMacro.sortColumnHeader('', 'paymentUserAssociation.errors', 'Errors'|trans) }}
                                        <th class="text-center">{{ 'Ações'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for paymentUserAssociation in paymentUserAssociations %}
                                        <tr>
                                            <td>{{ paymentUserAssociation.id }}</td>
                                            <td>{{ paymentUserAssociation.user.name }}</td>
                                            <td>{{ paymentUserAssociation.filename }}</td>
                                            <td>{{ paymentUserAssociation.quantity }}</td>
                                            <td>{{ paymentUserAssociation.errors }}</td>
                                            <td class="text-center" width="100">
                                                <a data-toggle="tooltip"
                                                   href="{{ path('manager_payment_user_association_details_index', {'paymentUserAssociation': paymentUserAssociation.id}) }}"
                                                   class="hover-success ml-2"
                                                   title="{{ 'Ver detalhes'|trans }}">
                                                    <i class="fas fa-book"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <nav class="d-flex justify-content-between">
                                    <small class="text-muted">{{ 'Showing'|trans }} {{ paymentUserAssociations|length }} {{ 'of'|trans }} {{ paymentUserAssociations.getTotalItemCount }}</small>

                                    {{ knp_pagination_render(paymentUserAssociations) }}
                                </nav>
                            </div>
                        {% else %}
                            <p class="my-2">{{ 'THEME_NOFOUND'|trans }}.</p>
                        {% endif %}
                    </div>
                    <br/>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message |trans }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{#    {{ encore_entry_script_tags('gestorPaymentUserAssociations') }}#}
    {{ parent() }}
{% endblock %}
