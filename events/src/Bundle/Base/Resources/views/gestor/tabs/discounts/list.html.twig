{# src/layouts/base.html.twig #}
{% macro sortColumnHeader(cssClass, field, label) %}

    {% set direction = app.request.get('sort') == field and app.request.get('direction') == 'asc' ? 'desc' : 'asc' %}

    <th class="sort {{ app.request.get('sort') == field ? app.request.get('direction') : '' }} {{ cssClass }}">
        <a href="{{ path(app.request.get('_route'), app.request.query.all|merge({'editionId': app.request.get('editionId'), 'sort': field, 'direction': direction})) }}">{{ label|trans }}</a>
    </th>

{% endmacro %}

{% import _self as sortMacro %}

{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link" href="{{ path('manager_index') }}" role="tab">
                    {{ 'Events'|trans }}
                </a>
                <a class="nav-item nav-link" href="{{ path('manager_editions_index', {'eventId': event.id}) }}" role="tab">
                    {{ 'MANAGER_EDITIONS'|trans }}
                </a>
                <a class="nav-item nav-link active" href="{{ path('manager_edition_discounts_index', {'editionId': edition.id}) }}" role="tab">
                    Descontos
                </a>
            </div>
        </nav>

        <div class="tab-content">
            <div class="tab-pane fade show active" role="tabpanel">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message |trans }}
                    </div>
                {% endfor %}

                <nav>
                    <div class="nav nav-tabs" role="tablist">
                        <a id="manager-back-route" class="nav-item nav-link active" href="{{ path('manager_edition_discounts_index', {'editionId': edition.id}) }}" role="tab">
                            Lista de<br/> Descontos
                        </a>
                    </div>
                </nav>
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel">
                        <div class="float-left">
                            <h1 class="mb-1">Descontos: <span class="info editionDiscountEditionName"></span></h1>
                            <b class="text-dark">Selecione o desconto para ver os detalhes, ou crie um novo.</b>
                        </div>

                        <a id="novaPaymentMode" class="btn btn-primary float-right neweditionDiscount" href="{{ path('manager_edition_discounts_new', {'editionId': edition.id}) }}" data-toggle="tooltip" title="Novo Desconto"><i class="fas fa-plus"></i></a>

                        <div class="clearfix"></div>

                        {% if editionDiscounts|length > 0 %}
                            <div class="tabela my-2">
                                <table class="table table-sm table-striped table-responsive-md w-100" id="editionDiscountsTable">

                                    <thead>
                                    <tr>
                                        {{ sortMacro.sortColumnHeader('', 'item.id', 'Id') }}
                                        {{ sortMacro.sortColumnHeader('', 'item.userIdentifier', 'Identificado do Usu√°rio') }}
                                        {{ sortMacro.sortColumnHeader('', 'item.value', 'Porcentagem de Desconto') }}
                                        {{ sortMacro.sortColumnHeader('text-center', 'item.type', 'Tipo') }}
                                        <th class="text-center" width="60">{{ 'Actions'|trans }}</th>
                                    </tr>
                                    </thead>

                                    <tbody>
                                    {% for item in editionDiscounts %}
                                        <tr>
                                            <td>{{ item.id }}</td>
                                            <td>{{ item.userIdentifier }}</td>
                                            <td>{{ item.percentage }}%</td>
                                            <td class="text-center">
                                                {{ TYPES[item.type] }}
                                            </td>
                                            <td class="text-center">
                                                <a data-toggle="tooltip" href="{{ path('manager_edition_discounts_edit', {'id': item.id}) }}" class="hover-success editPaymentMode" title="Editar Desconto">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>
                                                <a data-toggle="tooltip" href="#excluir" class="hover-danger ml-2 tdDel" title="Excluir Desconto" data-path="{{ path('manager_edition_discounts_remove', {'id': item.id}) }}" data-token="{{ csrf_token('delete' ~ item.id) }}" data-action="remove" data-type="{{ 'do desconto'|trans }}" data-name="{{ item.userIdentifier }}">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <nav class="d-flex justify-content-between">
                                    <small class="text-muted">{{ 'Showing'|trans }} {{ editionDiscounts|length }} {{ 'of'|trans }} {{ editionDiscounts.getTotalItemCount }}</small>

                                    {{ knp_pagination_render(editionDiscounts) }}
                                </nav>
                            </div>
                        {% else %}
                            <p class="my-2">{{ 'THEME_NOFOUND'|trans }}.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('gestorEditionDiscounts') }}
    {{ parent() }}
{% endblock %}
