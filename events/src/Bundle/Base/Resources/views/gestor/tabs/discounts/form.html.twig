{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-item nav-link" href="{{ path('manager_index') }}" role="tab">
                    {{ 'Events'|trans }}
                </a>
                <a class="nav-item nav-link" href="{{ path('manager_editions_index', {'eventId': event.id}) }}" role="tab">
                    {{ 'MANAGER_EDITIONS'|trans }}
                </a>
                <a class="nav-item nav-link active" href="{{ path('manager_edition_discounts_index', {'editionId': edition.id}) }}" role="tab">
                    Descontos
                </a>
            </div>
        </nav>

        <div class="tab-content">
            <div class="tab-pane fade show active" role="tabpanel">
                <nav>
                    <div class="nav nav-tabs" role="tablist">
                        <a id="manager-back-route" class="nav-item nav-link" href="{{ path('manager_edition_discounts_index', {'editionId': edition.id}) }}" role="tab">
                            Lista de<br/> Descontos
                        </a>
                        <a class="nav-item nav-link active" href="#dados" role="tab">
                            Dados do<br/> Desconto
                        </a>
                    </div>
                </nav>
                <div class="tab-content">
                    <div class="tab-pane fade show active" role="tabpanel">


                        {% if editionDiscount.id != '' %}
                            <h1>Dados do Desconto {{ editionDiscount.userIdentifier }}</h1>
                        {% else %}
                            <h1>Dados do Novo Desconto</h1>
                        {% endif %}

                        {% include "gestor/tabs/discounts/partials/_form.html.twig" %}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('gestorEditionDiscounts') }}
    {{ parent() }}
{% endblock %}
