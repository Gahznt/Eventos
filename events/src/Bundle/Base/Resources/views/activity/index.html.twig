{# src/layouts/base.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}

    <div class="container">
        <div class="formDiv">
            <div class="form-progress d-none d-md-block">
                <div class="time">
                    {{ 'Tempo m√©dio<br/>para o fim:'|trans|raw }}
                </div>
                <div class="steps" id="activityTimeLine">
                    <div class="step f active" data-step="1">
                        <span>4 min</span><br/>
                        <i class="fas fa-circle"></i><br/>
                        {{ 'ACTIVITY_STEP1'|trans|raw }}
                        </div>
                        <div class="step" data-step="2">
                        <span>2 min</span><br/>
                        <i class="fas fa-circle"></i><br/>
                        {{ 'ACTIVITY_STEP2'|trans|raw }}
                        </div>
                        <div class="step" data-step="3">
                        <span>1 min</span><br/>
                        <i class="fas fa-circle"></i><br/>
                        {{ 'ACTIVITY_STEP3'|trans|raw }}
                        </div>
                        <div class="step l" data-step="4">
                        <br/>
                        <i class="fas fa-circle"></i><br/>
                        {{ 'ACTIVITY_STEP4'|trans|raw }}
                    </div>
                </div>
            </div>
            <div class="mobileSteps d-md-none">{{ 'STEP'|trans }} <span>{{ step }}</span>/4</div>
            {{ form_start(form, {'attr': {'id':'formActivityStep', 'class': 'form', 'novalidate': 'novalidate', 'enctype':'multipart/form-data'}}) }}
                <div id="activityForm" class="form">
                    {% include "@Base/activity/partials/_index.html.twig" %}
                </div>

                <div class="row">
                    <div class="col-lg-6 mt-5">
                        <a class="btn btn-outline-primary btCadastroVoltar">{{ 'STEP_BACK'|trans }}</a>
                    </div>
                    <div class="col-lg-6 mt-5">
                        <a class="btn btn-primary btn-lg btn-block btCadastro">{{ 'STEP_FORWARD'|trans }} <i id="btnLoad"></i></a>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('activity') }}
{% endblock %}
